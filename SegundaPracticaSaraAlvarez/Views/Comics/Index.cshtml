@model List<Comic>
<h1>COMICS SQL Y ORACLE</h1>

<table class="table table-bordered border-primary">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Imagen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Comic comic in Model)
        {
            <tr>
                <th scope="row">@comic.Nombre</th>
                <td>@comic.Descripcion</td>
                <td><img src="@comic.Imagen" style="width: 150px"/></td>
            </tr>
        }
    </tbody>
</table>